<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/item_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hospital_image"
                android:layout_width="140dp"
                android:layout_height="118dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/medihome_stethoscope_logo" />

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/hospital_image"
                tools:text="Rumah Sakit UB"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hospital_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospital_name"
                android:layout_toRightOf="@id/hospital_image"
                android:background="@drawable/oval_background"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="Tipe B"
                android:textColor="#fff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/hospital_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospital_type"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/hospital_image"
                tools:text="Lowokwaru, Malang"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/harga_mulai_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hospital_location"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/hospital_image"
                android:text="Harga Mulai"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hospital_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga_mulai_tv"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/hospital_image"
                android:text="Rp 500.000"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harga_mulai_tv"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/hospital_price"
                android:text="/kamar/malam"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>