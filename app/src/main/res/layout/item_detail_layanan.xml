<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/nama_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/primaryBlack"
        tools:text="Tambal Gigi Depan Patah" />

    <TextView
        android:layout_below="@id/nama_layanan"
        android:id="@+id/deskripsi_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Deskripsi layanan" />


    <TextView
        android:id="@+id/harga_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="16dp"
        tools:text="Rp 300.000" />

    <View
        android:layout_below="@id/deskripsi_layanan"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"
        android:layout_marginTop="16dp"/>

</RelativeLayout>