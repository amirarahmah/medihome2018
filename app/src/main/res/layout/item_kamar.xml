<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/item_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_kamar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rumah_sakit"/>

            <TextView
                android:id="@+id/jenis_kamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:textSize="16sp"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/jenis_kasur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 bed pasien"
                android:textSize="10sp"
                android:layout_marginTop="-8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <View
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_grey"/>

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/kamar_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Rp 500.000"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@id/kamar_price"
                    android:text="/kamar/malam"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_pesan"
                    android:layout_alignParentEnd="true"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@color/colorAccent"
                    android:text="Pesan"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_grey"/>

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                android:id="@+id/lihat_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat detail"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

                <TextView
                    android:id="@+id/kamar_tersisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/tv2"
                    android:layout_marginTop="0dp"
                    android:text="4"
                    android:textColor="@color/red"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" kamar tersisa"
                    android:textColor="@color/red"
                    android:textSize="11sp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>