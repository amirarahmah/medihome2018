<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_hospital"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/klinik_image"
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/medihome_stethoscope_logo" />

        <TextView
            android:id="@+id/nama_klinik_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/klinik_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Rumah Sakit UB" />

        <TextView
            android:id="@+id/alamat_klinik_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/nama_klinik_tv"
            tools:text="100m â€¢ Jalan Veteran, Ketawanggede, Lowokwaru, Ketawanggede, Kec. Lowokwaru, Kota Malang" />

        <TextView
            android:id="@+id/jadwal_klinik_tv"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@+id/alamat_klinik_tv"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:text="08.00 - 20.00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/alamat_klinik_tv" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/nama_klinik_tv"
            app:layout_constraintTop_toBottomOf="@+id/nama_klinik_tv"
            app:srcCompat="@drawable/ic_place_24px" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/nama_klinik_tv"
            app:layout_constraintTop_toBottomOf="@+id/alamat_klinik_tv"
            app:srcCompat="@drawable/ic_access_time_24px" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
